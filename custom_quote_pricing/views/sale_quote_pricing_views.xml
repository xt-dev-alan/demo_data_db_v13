<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- quote pricing form view -->
        <record id="sale_quote_pricing_view_form" model="ir.ui.view">
            <field name="name">sale.quote.pricing.view.form</field>
            <field name="model">sale.quote.pricing</field>
            <field name="arch" type="xml">
                <form string="Service Cost">
                    <sheet>
                      <img src="/custom_quote_pricing/static/src/img/table.png" style="max-width:950px;"/>
                        <group col="4">
                            <field name="WEB"/>
                            <field name="index_q"/>
                            <field name="up"/>
                            <field name="material"/>
                            <field name="gauge"/>
                            <field name="gravity"/>
                            <field name="color"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group col="4">
                            <field name="tool_cost"/>
                            <field name="freight_cost"/>
                        </group>
                        <group col="4">
                            <field name="material_qty"/>
                            <field name="qty"/>
                            <field name="labor_rate"/>
                            <field name="line_speed"/>
                            <field name="commission"/>
                        </group>
                        <group col="4" string="Totals">
                            <field name="total_shots" />
                            <field name="total_material_pound" />
                            <field name="total_material_yards"/>
                            <field name="total_material"/>
                            <field name="total_material_m"/>
                            <field name="labor_rate_m"/>
                            <field name="total_labor" />
                            <field name="part_cost" />
                            <field name="total_k" />
                            <field name="total_commision" />
                            <field name="dlp_unit_price" />
                        </group>
                    </sheet>
                     <footer>
                        <button name="action_done" type="object" string="Done" class="oe_highlight"/> o 
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- service.cost action window -->
        <record id="sale_quote_pricing_action" model="ir.actions.act_window">
            <field name="name">Quote Pricing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.quote.pricing</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="sale_quote_pricing_view_form"/>
        </record>
    </data>
</odoo>